generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int             @id @default(autoincrement())
  name String
  pubkey String
  
  Token Token[]
}

model Token {
  id Int @id @default(autoincrement())
  tokenId Int
  name String
  symbol String
  url String
  
  userId Int
  user User @relation(fields: [userId], references: [id])

  website String?
  twitter String?
  supply String?

  ticker Int
  price Int
  sale_start Int
  sale_end Int
  min_purchase Int
  max_purchase Int
  available Int

  token_mint String
  associated_token_presale String?
  presaleAccount String?
}